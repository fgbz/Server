<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<mvc:annotation-driven>
		<!-- 消息转换器 -->
		<mvc:message-converters register-defaults="true">
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<property name="supportedMediaTypes">
					<list>
						<value>text/html;charset=UTF-8</value>
						<value>application/json;charset=UTF-8</value>
					</list>
				</property>
				<!--<property name="supportedMediaTypes" value="text/html;charset=UTF-8" />-->
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>
	
	<mvc:default-servlet-handler/>
	<bean id="myHandler"  class="phalaenopsis.common.websocket.HandshakeInterceptor">
	</bean>

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**/*" />
			<bean class="phalaenopsis.common.method.CrossInterceptor">
				<property name="ignoreUrls"
					value="/api;/Phalaenopsis/UserCenter/getUpToDateAdviceinfos;/Phalaenopsis/UserCenter/getSuggestionList;/Phalaenopsis/Lawstandard/getUptodateLawstandardList;/Phalaenopsis/Lawstandard/getHomeChart;/Phalaenopsis/FgbzDic/getAllFgbzDictory;/Phalaenopsis/System/Login;/Phalaenopsis/Lawstandard/getHomePageLawsType;/Phalaenopsis/Technical/getHomePageTecsType;/Phalaenopsis/Technical/getTechnicalList"></property>


				<!--<property name="ignoreUrls"-->
						  <!--value="/api;/UserCenter/getUpToDateAdviceinfos;/UserCenter/getSuggestionList;/Lawstandard/getUptodateLawstandardList;/Lawstandard/getHomeChart;/FgbzDic/getAllFgbzDictory;/System/Login;/Lawstandard/getHomePageLawsType;/Technical/getHomePageTecsType;/Technical/getTechnicalList"></property>-->
			</bean>
		</mvc:interceptor>
		<!-- liulang add start -->
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="phalaenopsis.common.interceptor.LogInterceptor">
			</bean>
		</mvc:interceptor>
		<!-- liulang add end -->
	</mvc:interceptors>

	<context:component-scan base-package="phalaenopsis.*">
		<context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Service" />
		<context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Repository" />
	</context:component-scan>
	<!-- annotation默认的方法映射适配器 <bean id="handlerMapping" class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" 
		/> <bean id="handlerAdapter" class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" 
		/> -->




	<!--<bean class="phalaenopsis.common.controller.ApiConfig"/>-->


	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- set the max upload size100MB -->
		<property name="maxUploadSize">
			<value>104857600</value>
		</property>
		<property name="maxInMemorySize">
			<value>4096</value>
		</property>
	</bean>
</beans>